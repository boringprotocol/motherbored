generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Peer {
  id       String  @id @default(cuid())
  name     String?
  setupkey String?
  kind     String?
  User     User?   @relation(fields: [userId], references: [id])
  userId   String?
}

model User {
  id            String    @id @default(cuid())
  wallet        String    @unique
  name          String?
  image         String?
  peers         Peer[]
}