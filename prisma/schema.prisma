generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Peer {
  id       String  @id @default(cuid())
  name     String?
  setupkey String?
  kind     String?
  User     User?   @relation(fields: [userId], references: [id])
  userId   String?
  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  wallet        String    @unique
  name          String?
  image         String?
  peers         Peer[]
}
